@model ClassicGarageAuth.Models.RepairModel

@{
    ViewBag.Title = "Create";
}

<h2>Utwórz nową naprawę</h2>

<button type="button" class="btn btn-default no-link upper-btn">
    @Html.ActionLink("Powrót", "Owner")
</button>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-3">Nazwa</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Opis</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Koszt</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.CostAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CostAmount, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-3">Samochód</label>
            <div class="col-md-9">
                <select name="CarModelID" class="form-control">
                    @foreach (var car in ViewBag.Cars)
                    {
                        <option value="@car.ID">@car.Make @car.Model</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
                <input type="reset" value="Wyczyść" class="btn btn-danger" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
